{
  "name": "oriandras-theme",
  "version": "0.1.0",
  "private": true,
  "description": "Oriandras WordPress theme frontend build (Tailwind CSS)",
  "scripts": {
    "dev": "cross-env NODE_ENV=development tailwindcss -i ./assets/css/tailwind.css -o ./dist/app.css --watch",
    "build": "cross-env NODE_ENV=production tailwindcss -i ./assets/css/tailwind.css -o ./dist/app.css --minify"
  },
  "devDependencies": {
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.9",
    "@tailwindcss/typography": "^0.5.15",
    "cross-env": "^7.0.3",
    "tailwindcss": "^3.4.10"
  }
}
